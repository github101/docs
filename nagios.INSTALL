		----------------------------------------------------------
		
		## below is the sms_send.py
		## sms_send.py
		----------------------------------------------------------
		# -*- coding: utf-8 -*-
		import time
		import serial
		import os,sys

		# s utf8 string
		# unicode hex string(ASCII)
		def sm_encode(s):
			#将utf8字符串转换成unicode串
			ss = s.decode('utf-8')
			if len(ss)>70:
				return 'ERROR0'
			sss = ''
			#取每个unicode字符转换成四个十六进制字符（标准ASCII字符串）
			for c in ss:
				h = '%04X'%(ord(c))
				sss+=h
			#print len(ss)
			ss_len = len(ss)
			return '%02X'%(ss_len*2)+sss

		#手机号码编码
		#  code 手机号
		def encode_code(code):
			if len(code)!=13 : return ''
			code+='F'
			c = ''
			for i in range(0,6):
				c+=code[i*2+1]+code[i*2]
			c = '91'+c
			return c

		#  sm pdu:ASCII字符串
		#  code 对方手机号码
		#  msg 消息内容（utf8字符串）
		def pdu(code,msg):
			r = '08'                        #短信中心号码字节长度(按字节算，包含91）
			r += encode_code('8613800755500')   #深圳的短信中心号码，其它地方需要替换成当地的短信中心号码
			r+='F0'
			r += '11'                       #TP-MTI(2bit)，TP-RD(1bit)，TP-VPF(2bit)
											#TP-RP（1bit），TP-UDHI(1bit)，TP-SRR(1bit)
			r += '00'                       #TP-Message-Reference，“00”表示由电话设置该值

			r += '0D'                       #手机号码长度 0x0D=13 十进制 len('8613668888888)
			r += encode_code(code)          #对方手机号
			r +='F1'
			r += '00'                       #协议标识（TP-PID），普通GSM类型，点到点方式
			r += '08'                       #使用unicode编码（00表示7bit编码）
			r += '00'                       #生存期，FF表示最大

			r += sm_encode(msg)
			return r

		#保存短信到手机
		def save(p):
			pdu_len = (len(p)-18)/2
			#print 'AT+CMGW='+str(pdu_len)+'\r'+p+'\x1a'

			#return 
			try:
				com = serial.Serial()
				com.timeout = 5
				com.port = 0
				com.baudrate=115200
				com.open()
				cmd = 'AT+CMGW='+str(pdu_len)+'\r'
				#print cmd      
				com.write(cmd)
		#       print com.read(512)
				com.write(p)
				com.write('\x1a')
				#print com.read(512)
				return com.read(512)
			except Exception,ex:
		#       print ex
				return 'ERROR'

		#发送短信
		def send(p):
			logger = Logger()
			pdu_len = (len(p)-18)/2
			try:
				com = serial.Serial()
				com.close()

				com.timeout = 5
				com.port = 0
				com.baudrate=115200
				com.open()
				if com.isOpen()==True:
				### Note: AT command's format ###
					## AT+CMGF=0'+'\r'+'\x1a'+str(pdu_len)+'\r'
					## This maybe must first send "0'+'\r'+'\x1a'" to AT,like those:(Please reference your GSM/GPRS MODEM)
					## cmds='AT+CMGF=0'+'\r'+'\x1a'
					## com.write(cmds)
					## cmds='AT+CMGS='+str(pdu_len)+'\r'
					## com.write(cmds)

					cmds='AT+CMGF=0'+'\r'+'\x1a'
					com.write(cmds)
					cmds='AT+CMGS='+str(pdu_len)+'\r'
					com.write(cmds)
					com.write(p)
					com.write('\x1a')
					return com.read(512)
				else:
					return 'ERROR1'
			except Exception,ex:
				return 'ERROR1'

		class Logger(object):
			def __init__(self):
				from time import strftime
				pid = os.getpid()
				logtime=strftime('%Y%m%d')
				self.logfile = '/var/log/nagios/nagios_send_sms-%s.log' % logtime

			def write(self, err):
				logline = '%s|%s\n' % (time.asctime(), err)
				f = file(self.logfile, 'a')
				f.write(logline)
				f.close()

		def sms_send(msg,pcode):
			logger = Logger()
			s=msg
			## Note: the msg's number must less than 70 
			pnum=pcode.split(",")
			for p_num in pnum:

				logger.write('''Msg send to %s\n''' % p_num)
				p = pdu(str(p_num),s)
				try:
					res = send(p)   #发送短信到手机
					if res.find('ERROR1')>=0:
						logger.write('''send short message error!\n''')
					else:
						pass
				except Exception,ex:
					pass

		if __name__=='__main__':
			argv = sys.argv
			msg=argv[1]
			pcode=argv[2]
			sms_send(msg,pcode)

